<UserControl x:Class="LeetCodePlugin.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="629.5" d:DesignWidth="300"
             Name="MyToolWindow">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Margin="0,5,0,0">
            <Button Height="21" Click="SetCookieBtnClick" Margin="0,10,0,0" Content="SetCookie">
            </Button>
            <Button Content="Edit" Height="21" Click="EditBtnClick" Margin="0,10,0,0"/>
            <Button Content="Previous" Height="21" Click="PreviousBtnClick" Margin="0,10,0,0"/>
            <Button Content="Next" Click="NextBtnClick" Margin="0,10,0,0"/>
            <Button Content="Test" Margin="0,10,0,0"/>
            <Button Content="Submit" Margin="0,10,0,0"/>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label Content="num:" Foreground="#FFFFFEFE"/>
                <TextBox TextWrapping="Wrap" Text="TextBox" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="lang:" Foreground="#FFFFFEFE"/>
                <ComboBox Name="langCombobox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" MinWidth="60" SelectedIndex="0">
                    <ComboBoxItem Content="cpp"/>
                    <ComboBoxItem Content="c"/>
                    <ComboBoxItem Content="c#"/>
                    <ComboBoxItem Content="python"/>
                    <ComboBoxItem Content="rust"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <TabControl Background="{x:Null}">
            <TabItem Header="problem">
                <ScrollViewer>
                    <TextBlock Name="problemContent" TextWrapping="Wrap" Foreground="#FFD6D5D5" Margin="10,0,0,0"><Run Text="TextBlock"/><LineBreak/><Run Language="zh-cn" Text="12341234"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="result">
                <ScrollViewer>
                    <TextBlock Name="resultContent" TextWrapping="Wrap" Foreground="#FFD6D5D5" Margin="10,0,0,0"><Run Text="TextBlock"/><LineBreak/><Run Language="zh-cn" Text="12341234"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
